<% @user = user %>

<% if current_user && !current_user.isTalent %>
  <div id="follow_form">
    <% if current_user.following?(@user) %>
      <%= render partial: 'users/unfollow' , locals: { user: @user} %>
    <% else %>
      <%= render partial: 'users/follow' , locals: { user: @user} %>
    <% end %>
  </div>
<% end %>
  
<% unless user_signed_in? %>
  <%= button_to "Follow", new_user_registration_path, class: "button",
                  method: 'get', params: {followed_user: @user} %>
<% end %>

