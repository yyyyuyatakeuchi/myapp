<% provide(:title, 'ユーザー一覧') %>
<h1>管理者用ユーザー一覧</h1>
<p>お気に入りを見つけるべし</p>


<ul class="all_users">
<% @users.each do |user| %>
    <li>
  <%= link_to gravatar_for(user),mypage_path(user) %>
  <%= link_to user.name, mypage_path(user) %>
  <% if current_user != user%>
    | <%= link_to "delete", admin_path(user), method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% else %>
    <p>管理ユーザー</p>    
  <%end%>
  <% if user.isTalent%>
    <p>お笑い芸人</p>
  <% elsif current_user != user%>
    <p>一般ユーザー</p>
  <% end %>
</li>
<% end %>
</ul>

<%= paginate @users%>